---
import "../styles/global.css";
import { Toaster } from "../components/ui/toast";

interface Props {
  title?: string;
}

const { title = "10xCards" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-50 dark:bg-slate-900">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-gray-200 dark:border-gray-800">
        <div class="container mx-auto px-4 py-4">
          <nav class="flex items-center justify-between">
            <a href="/" class="text-xl font-bold text-blue-600 dark:text-blue-400">
              10xCards
            </a>
            <div class="flex items-center space-x-4">
              <a href="/flashcards" class="text-sm text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                Fiszki
              </a>
              <a href="/review" class="text-sm text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                Powtórki
              </a>
            </div>
          </nav>
        </div>
      </header>

      <main class="flex-grow container mx-auto px-4 py-8">
        <slot />
      </main>

      <footer class="border-t border-gray-200 dark:border-gray-800">
        <div class="container mx-auto px-4 py-4">
          <div class="text-center text-sm text-gray-500 dark:text-gray-400">
            &copy; 2025 10xCards. Wszystkie prawa zastrzeżone.
          </div>
        </div>
      </footer>
    </div>
    <Toaster client:load />
  </body>
</html> 